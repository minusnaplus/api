version: '3'

services:
  <% containers.each do |container| %>
  <%= container[:name] %>:
    image: <%= container[:image] %>
    environment:
      <% container[:env].each do |key, value| %>
      <%= key %>: <%= value %>
      <% end %>
    ports:
      <% container[:ports].each do |port| %>
      - <%= port %>
      <% end %>
  <% end %>
